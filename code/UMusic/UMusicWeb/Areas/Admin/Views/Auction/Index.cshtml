@model List<Auction>

<style>
    .max-width-column {
        max-width: 250px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-dark">
                Auction List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Auction" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> Create New Auction
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Automatic Initialization</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(o => o.Id))
            {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td class="max-width-column">@obj.Description</td>
                    <td>@obj.AutomaticInitialization</td>
                    <td>@obj.StartDate</td>
                    <td>@obj.EndDate</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Auction" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-secondary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Auction" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-file-earmark-minus"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>